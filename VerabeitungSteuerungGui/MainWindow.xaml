<Window x:Class="VerabeitungSteuerungGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerabeitungSteuerungGui"
        mc:Ignorable="d"
        Title="Test Manager Gui" Height="405" Width="542">
    <Grid Height="389" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="471*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Start Test" HorizontalAlignment="Left" Height="28" Margin="311,45,0,0" VerticalAlignment="Top" Width="126" Grid.Column="1" Click="Button_Click_StartTest"/>
        <Button Content="Start Callibration" HorizontalAlignment="Left" Height="28" Margin="311,78,0,0" VerticalAlignment="Top" Width="126" Grid.Column="1" Click="Button_Click_StartCallibration"/>
        <Button Content="Stop Test" HorizontalAlignment="Left" Height="28" Margin="311,337,0,0" VerticalAlignment="Top" Width="126" Grid.Column="1" Click="Button_Click_StopTest"/>
        <TextBlock x:Name="OutputTextBox" HorizontalAlignment="Left" Height="325" Margin="42,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="316" Background="LightGray" Grid.ColumnSpan="2" />

    </Grid>
</Window>
